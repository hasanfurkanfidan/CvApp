@{
}
@model List<Hff.CvApp.DTOs.Concrete.EducationDtos.EducationListDto>
<section class="resume-section" id="education">
    <div class="resume-section-content">
        <h2 class="mb-5">Eğitim</h2>
        @foreach (var item in Model)
        {
    <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
        <div class="flex-grow-1">
            <h3 class="mb-0">@item.Title</h3>
            <div class="subheading mb-3">@item.SubTitle</div>
            <div>@item.Description</div>
        </div>
        @if (@item.EndDate.ToShortDateString() == "1/1/0001")
        {
            <div class="flex-shrink-0"><span class="text-primary">@item.StartDate.ToShortDateString() - devam ediyor </span></div>

        }
        else
        {
            <div class="flex-shrink-0"><span class="text-primary">@item.StartDate.ToShortDateString() - @item.EndDate.ToShortDateString() </span></div>
        }
    </div>
        }


</section>