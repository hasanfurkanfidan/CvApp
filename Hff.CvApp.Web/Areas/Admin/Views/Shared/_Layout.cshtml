<!DOCTYPE html>
<html lang="tr">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Simple Sidebar - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/AdminTheme/web/css/simple-sidebar.css" rel="stylesheet">

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">Admin Panel</div>
            <div class="list-group list-group-flush">
                <a asp-action="Index" asp-controller="Home" asp-area="Admin" class="list-group-item list-group-item-action @(TempData["Active"]?.ToString()=="bilgilerim"?"active":"")">Bilgilerim</a>
                <a asp-action="ChangePassword" asp-controller="Home" asp-area="Admin" class="list-group-item list-group-item-action @(TempData["Active"]?.ToString()=="sifre"?"active":"") ">Şifre değiştir</a>
                <a asp-action="Index" asp-controller="Certification" asp-area="Admin" class="list-group-item list-group-item-action @(TempData["Active"]?.ToString()=="sertifikalarım"?"active":"") ">Sertifikalarım</a>
                <a asp-action="Index" asp-controller="Education" asp-area="Admin" class="list-group-item list-group-item-action @(TempData["Active"]?.ToString()=="egitim"?"active":"") ">Eğitimlerim</a>
                <a asp-action="Index" asp-controller="Experience" asp-area="Admin" class="list-group-item list-group-item-action @(TempData["Active"]?.ToString()=="deneyim"?"active":"") ">Deneyimlerim</a>
                <a asp-action="Index" asp-controller="Skill" asp-area="Admin" class="list-group-item list-group-item-action @(TempData["Active"]?.ToString()=="yetenek"?"active":"") ">Yeteneklerim</a>

            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Menüyü Gizle</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @*<div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Dropdown
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>
                    </ul>
                </div>*@
            </nav>

            <div class="container-fluid p-3">
                @if (!String.IsNullOrEmpty(TempData["message"]?.ToString()))
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        @TempData["message"].ToString()
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                @RenderBody()
            </div>
        </div>
       
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->

    <script src="~/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/jquery/jquery.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });</script>

</body>

</html>
