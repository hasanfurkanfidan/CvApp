@model SocialMediaIconUpdateDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<form class="form-group" method="post">
    <div class="form-group">
        <label>Link</label>
        <span class="text-danger" asp-validation-for="@Model.Link"></span>
        <input class="form-control" asp-for="@Model.Link" />
    </div>
    <div class="form-group">
        <label>İkon</label>
        <span class="text-danger" asp-validation-for="@Model.Icon"></span>
        <input class="form-control" asp-for="@Model.Icon" />
    </div>
    <input type="hidden" />
    <div class="form-group">
        <button class="btn btn-success">Güncelle</button>
    </div>
</form>