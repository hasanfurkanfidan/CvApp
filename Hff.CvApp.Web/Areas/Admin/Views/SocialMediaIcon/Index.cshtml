@model List<SocialMediaIconListDto>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover table-striped table-sm">
    <tr>
        <th>Id</th>
        <th>Link</th>
        <th>İkon</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @for (int i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>@Model[i].Id</td>
            <td>@Model[i].Link</td>
            <td>@Model[i].Icon</td>
            <td><a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model[i].Id"></a></td>
            <td><a asp-action="Update" class="btn btn-success" asp-route-id="@Model[i].Id"></a></td>

        </tr>
    }
</table>
<br />
<a asp-action="Insert" class="btn btn-primary">İkon Ekle</a>